<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#464E53"
    tools:context=".ChatsFragment">


    <LinearLayout
        android:id="@+id/aa"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/cherch" />
        <EditText
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint=" Cherche conversation"
            android:textSize="20dp">
            <requestFocus />
        </EditText>
    </LinearLayout>


    <!-- TODO: Update blank fragment layout -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chats_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/aa"
        android:layout_alignParentStart="true"></androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>